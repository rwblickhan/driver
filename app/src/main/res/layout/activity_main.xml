<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/passenger_driver_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="36dp">

            <RadioButton
                android:id="@+id/i_am_a_passenger_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:buttonTint="@color/colorSecondary"
                android:text="@string/passenger_bttn_text"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/i_am_a_driver_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/colorSecondary"
                android:text="@string/driver_bttn_text"
                android:textSize="18sp" />
        </RadioGroup>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passenger_driver_select"
            android:layout_marginTop="13dp"
            android:backgroundTint="@color/colorSecondary"
            android:text="Create or find a session"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>
